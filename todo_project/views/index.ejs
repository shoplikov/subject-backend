<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Todo</h1>
        <form action="/" method="POST">
            <input type="text" name="title" placeholder="Enter task">
            <button type="submit">Add Task</button>
        </form>
        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <span style="text-decoration: <%= task.completed ? 'line-through' : 'none' %>;"><%= task.title %></span>
                    <form action="/<%= task._id %>/complete" method="POST" style="display: inline;">
                        <button type="submit" <%= task.completed ? 'disabled' : '' %>>Mark as Completed</button>
                    </form>
                    <form action="/<%= task._id %>/delete" method="POST" style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
